doctype html
html(lang="en")
  head
    title EJ-CLI command line interface for Syncfusion controls
    if useCDN
      link(rel="stylesheet" href="http://cdn.syncfusion.com/" + version + "/js/web/"+ theme + "/ej.web.all.min.css")
    else
      link(rel="stylesheet" href=version + "/themes/web/"+ theme + "/ej.web.all.min.css")
    if useCDN
      script(src="https://code.jquery.com/jquery-1.10.2.min.js")
      script(src="http://cdn.syncfusion.com/js/assets/external/jquery.easing.1.3.min.js")
      script(src="http://cdn.syncfusion.com/js/assets/external/jsrender.min.js")
    else  
      script(src="external/jquery-1.11.3.min.js")
      script(src="external/jquery.easing.1.3.min.js")
      script(src="external/jsrender.min.js") 
    
    if requireGlobalize && !useCDN
     script(src="external/jquery.gobalize.min.js") 

    if requireGlobalize && useCDN
     script(src="http://cdn.syncfusion.com/js/assets/external/jquery.globalize.min.js")
   
    if requireExtension
     script(src="external/" + extension.external)
    
    if useCDN
     script(src="http://cdn.syncfusion.com/"+ version +"/js/web/ej.web.all.min.js")
    else
     script(src=version + "/scripts/ej.web.all.min.js")
   
    if requireExtension && useCDN
     script(src="http://cdn.syncfusion.com/"+ version +"/js/common/"+extension.ejfile)
    
    if requireExtension && !useCDN
     script(src=version + "/scripts/" + extension.ejfile)
  
  body
   each props, name in controls
    div #[#{props.tag}(class=props.class)] 
   each props, name in controls 
    script.    
     $(function(){       
           $(".#{props.class}")["#{props.name}"](!{JSON.stringify(props.properties)});
     });  

  